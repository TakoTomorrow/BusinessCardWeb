{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose up",
            "type": "shell",
            "command": "docker-compose up -d --build",
            "problemMatcher": []
        },
        {
            "label": "docker-compose down",
            "type": "shell",
            "command": "docker-compose down",
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/BusinessCardWeb.Server/BusinessCardWeb.Server.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "npm-run-dev",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/BusinessCardWeb.Client"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": ".*ready|Compiled successfully|Local:.*http://"
                    }
                }
            ]
        },
        {
            "label": "stop-vite-site",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "stop"
            ],
            "options": {
                "cwd": "${workspaceFolder}/BusinessCardWeb.Client"
            },
            "isBackground": true,
        }
    ]
}