    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core",
            "type": "coreclr",
            "preLaunchTask": "build",
            "program": "BusinessCardWeb.Server/bin/Debug/net8.0/BusinessCardWeb.Server.dll",
            "request": "launch",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7001",
            }
        },
        // debug businesscardweb.client 
        {
            "name": "BusinessCardWeb.Client",
            "type": "chrome",
            "request": "launch",
            "url": "https://localhost:57793",
            "webRoot": "${workspaceFolder}/businesscardweb.client/src",
            "preLaunchTask": "npm: dev"
        }
    ]
}