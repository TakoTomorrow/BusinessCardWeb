{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to BusinessCardWeb.Server in Docker",
            "type": "coreclr",
            "request": "attach",
            "processId": "1",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "businesscardweb-server-debug"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": true
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}/BusinessCardWeb.Server"
            },
            "justMyCode": false
        }
    ]
}